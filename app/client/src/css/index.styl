@import '_style'

.content
  width 95%
  margin 0 auto
  p
    margin 15px 0

.logo
  font-family 'AnotherFlight'
  font-size 32px
  color #d1f122ee
  span
    margin-left 10px

header
  width 100%
  background #383838
  min-height 80px
  display flex
  align-items center

main
  flex 1
  display flex
  justify-content center

  .content
    padding 20px 0

footer
  background #ecb330
  display flex
  p
    font-family 'arial'

body
  background white
  display flex
  flex-direction column
  min-height 100vh

.hide
  display none

.modal
  min-height 200px
  min-width 200px
  width 300px
  border 1px solid #ddd
  position absolute
  left 0
  top 50%
  right 0
  margin 0 auto
